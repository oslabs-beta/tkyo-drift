{
  "compilerOptions": {
    "outDir": "./dist/",
    "sourceMap": true,
    "strict": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "target": "ES2017",
    "allowJs": true,
    "jsx": "react",
    "skipLibCheck": true
  },
  "ts-node": {
    "esm": true
  },
  "include": ["client/**/*", "server/**/*", "types/*.ts"],
  "exclude": ["node_modules", "dist", "**/*.test.ts"]
}
